<div class="container">
    <div class="row">
        <div class="col-auto">
            <h2>Welcome, {{name}}!</h2>
        </div>
    </div>

    <!-- Update Blog Form -->
    <div class="update post">
        <div class="card txt-bg-sec mb-3 m-2" style="max-width: 100%">
            <h3 class="card-hd txt-bg-sec mb-3">Update Blog Post:</h3>
            <div class="card-bd txt-bg-lt mb-3">
                <form class="update-form">
                    <div class="card-bd txt-bg-lt mb-4">
                        <div class="form-grp">
                            <label for="update-post-title">Blog Post Title:</label>
                            <input class="form-inp" type="text" id="update-post-title" name="post-title"
                                placeholder="Post Title" />
                        </div>
                        <div class="form-grp">
                            <label for="update-post-desc">Blog Post Content:</label>
                            <textarea class="form-inp" id="update-post-desc" name="post-desc"
                                placeholder="Type your thoughts here!" style="width: 100%; height: 200px;"></textarea>
                        </div>
                        <div class="form-grp m-2">
                            <button type="submit" id="submit-update-btn" class="btn btn-prm"
                                data-id="{{post.post_id}}">Submit Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Create New Post Form -->
    <div class="new-post">
        <div class="col-md-6" style="max-width: 80%"></div>
        <h3>Create a New Blog Post:</h3>
        <div class="form-grp">
            <form class="new-post-form">
                <div class="form-grp">
                    <label for="new-post-title">Blog Post Title:</label>
                    <input class="form-inp" type="text" id="new-post-title" name="post-title"
                        placeholder="Post Title" />
                </div>
                <div class="form-grp">
                    <label for="new-post-desc">Blog Post Content:</label>
                    <textarea class="form-inp" id="new-post-desc" name="post-desc"
                        placeholder="Type your thoughts here!" style="width: 100%; height: 200px;"></textarea>
                </div>
                <div class="form-grp">
                    <button type="submit" class="btn btn-prm create-btn">Create</button>
                </div>
            </form> <!-- Moved closing form tag here -->
        </div>
    </div>

<!-- My Posts Section -->
<div class="my-post">
    <div class="col-md-6">
        <h3>My Blog Posts:</h3>
        {{#if Posts.length}}
        {{#each Posts as |post|}}
        <div class="row">
            <div class="col-md-8">
                <h4><a href="/posts/{{post.post_id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm update-btn" data-id="{{post.post_id}}">UPDATE</button>
                <button class="btn btn-sm delete-btn" data-id="{{post.post_id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <p>No posts found.</p>
        {{/if}}
    </div>
</div>
</div>

<!-- Local upload instantiation -->
<script src="./js/dashboard.js"></script>