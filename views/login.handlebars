<div class="row">
    <div class="container login">
        <div class="col-md-6">
            <h1>Login</h1>

            <form class="form login-form">
                <div class="form-group">
                    <label for="email-login">Email</label>
                    <input class="form-input email-login" type="text" id="email-login" placeholder="Enter your email" />
                </div>
                <div class="form-group">
                    <label for="password-login">Password</label>
                    <input class="form-input" type="password" id="password-login" placeholder="Enter your password" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary password-login" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
    <div class="container signup">
        <div class="col-md-6">
            <h1>Signup</h1>

            <form class="form signup-form">
                <div class="form-group">
                    <label for="name-signup">Name</label>
                    <input class="form-input name-signup" type="text" id="name" placeholder="Enter your name" />
                </div>
                <div class="form-group">
                    <label for="email-signup">Email</label>
                    <input class="form-input email-signup" type="text" id="email-signup"
                        placeholder="Enter your email" />
                </div>
                <div class="form-group">
                    <label for="password-signup">Password</label>
                    <input class="form-input password-signup" type="password" id="password-signup"
                        placeholder="Enter your password" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>